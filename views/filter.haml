:css
  .axis path,
  .axis line {
    fill: none;
    stroke: #000;
    shape-rendering: crispEdges;
  }
  
  .line {
    fill: none;
    stroke: steelblue;
    stroke-width: 1.5px;
  }
  

%script{:src => "//www.google.com/jsapi"}
%script{:src => "chartkick.js"}

%h2 Select Data to Download
%br/
%ul
  %li
    %p Select the date and time range and types of data you would like visualize
  / Form to submit data preferances for download
  %br/
  %li
    %form{:action => "/filter", :method => "POST"}
      From:
      %br/
      %br/
      Date (yyyy-mm-dd):
      %input{:name => "date1", :type => "date"}/
      Time (hh:mm:ss):
      %input{:name => "time1", :type => "time"}/
      %br/
      %br/
      To:
      %br/
      %br/
      Date (yyyy-mm-dd):
      %input{:name => "date2", :type => "date"}/
      Time (hh:mm:ss):
      %input{:name => "time2", :type => "time"}/
      %input{:type => "submit", :value => "Visualize!"}/

- if @showGraph
  %h2 Current:
  = line_chart @current

- if @showGraph
  %h2 Voltage:
  = line_chart @voltage

- if @showGraph
  %h2 Temperature: 
  = line_chart @temperature
